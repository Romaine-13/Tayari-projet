generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  postnom   String
  imageUrl  String?
  gender    String
  matricule String     @unique
  role      Role
  email     String     @unique
  password  String
  presence Presence[]
 
}

model Presence {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  location  String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  USER
}
